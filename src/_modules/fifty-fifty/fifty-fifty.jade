mixin fifty-fifty(data, image, mode)
    section.fifty-fifty.gray-bg(class="#{mode == 'imageLeft' ? 'fifty-fifty--img-left' : ''}")
        .container-fluid
            .row.nopadding
                if mode == 'imageLeft'
                    .col-24.col-sm-13
                        .fifty-fifty__image
                            img(src=image)
                    .col-24.col-sm-11
                        .fifty-fifty__data
                            h3.fifty-fifty__title.section-title.section-title--left!= data.title
                            h3.fifty-fifty__subtitle!= data.subtitle
                            if data.button
                                a.button(href=data.button.url, target="_blank")
                                    i.fa.fa-download
                                    |#{data.button.text}
                    

                else
                    .col-24.col-sm-11
                        .fifty-fifty__data
                            h3.fifty-fifty__title.section-title.section-title--left!= data.title
                            p.fifty-fifty__subtitle!= data.subtitle
                            if data.button
                                a.button(href=data.button.url, target="_blank")
                                    i.fa.fa-download
                                    |#{data.button.text}
                    .col-24.col-sm-13
                        .fifty-fifty__image
                            img(src=image)
