extends ../_layouts/base

include ../_modules/hero/hero
include ../_modules/article/article

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.noticias
        +hero('Noticias')
        section.noticias__body.ripped-border.ripped-border--gray.ripped-border--top
            .noticias__wrapper.gray-bg
                .container
                    .row
                        each article in site.data.news
                            .col-24.col-sm-12.col-md-8
                                +article(article)
