extends ../_layouts/base

include ../_modules/hero/hero
include ../_modules/article/article

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.actividades
        +hero('Actividades')
        section.actividades__body.ripped-border.ripped-border--gray.ripped-border--top
            .actividades__wrapper.gray-bg
                .container
                    .row
                        each article in site.data.activities
                            .col-24.col-sm-12.col-md-8
                                +article(article)