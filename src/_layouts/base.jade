    <![endif]-->
    
    include ../_modules/logo/logo.jade
    
    block header
        include ../_modules/header/header.jade

    block content

    block footer
        include ../_modules/footer/footer.jade

    block scripts
        script(src= baseUrl + 'scripts/main.js')
        
        script(src="//cdnjs.cloudflare.com/ajax/libs/wow/0.1.12/wow.min.js")
        script(src="/scripts/jquery.requestAnimationFrame.js")
        script(src="/scripts/jquery.mousewheel.js")
        script(src="/scripts/ilightbox.packed.js")
        
        script new WOW().init();
        script $('.galeria__image').iLightBox();

</html>
